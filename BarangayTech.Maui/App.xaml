<?xml version="1.0" encoding="utf-8"?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BarangayTech.App">
    <Application.Resources>
        <ResourceDictionary>
            <!-- Color Resources -->
            <Color x:Key="PrimaryColor">#2E7D32</Color>
            <Color x:Key="PrimaryLightColor">#A5D6A7</Color>
            <Color x:Key="PrimaryDarkColor">#1B5E20</Color>
            <Color x:Key="SecondaryColor">#1976D2</Color>
            <Color x:Key="AccentColor">#FF5722</Color>
            <Color x:Key="BackgroundColor">#F8F9FA</Color>
            <Color x:Key="SurfaceColor">#FFFFFF</Color>
            <Color x:Key="TextPrimaryColor">#212121</Color>
            <Color x:Key="TextSecondaryColor">#757575</Color>
            <Color x:Key="DividerColor">#E0E0E0</Color>

            <!-- Button Styles -->
            <Style x:Key="PrimaryButtonStyle" TargetType="Button">
                <Setter Property="BackgroundColor" Value="{StaticResource PrimaryColor}" />
                <Setter Property="TextColor" Value="White" />
                <Setter Property="CornerRadius" Value="20" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="Padding" Value="20,10" />
            </Style>

            <Style x:Key="SecondaryButtonStyle" TargetType="Button">
                <Setter Property="BackgroundColor" Value="{StaticResource SecondaryColor}" />
                <Setter Property="TextColor" Value="White" />
                <Setter Property="CornerRadius" Value="20" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="Padding" Value="20,10" />
            </Style>

            <!-- Frame Styles -->
            <Style x:Key="CardFrameStyle" TargetType="Frame">
                <Setter Property="BackgroundColor" Value="{StaticResource SurfaceColor}" />
                <Setter Property="CornerRadius" Value="10" />
                <Setter Property="HasShadow" Value="True" />
                <Setter Property="Padding" Value="15" />
            </Style>

            <!-- Label Styles -->
            <Style x:Key="HeaderLabelStyle" TargetType="Label">
                <Setter Property="FontSize" Value="18" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="TextColor" Value="{StaticResource PrimaryColor}" />
            </Style>

            <Style x:Key="SubHeaderLabelStyle" TargetType="Label">
                <Setter Property="FontSize" Value="16" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="TextColor" Value="{StaticResource TextPrimaryColor}" />
            </Style>

            <Style x:Key="BodyLabelStyle" TargetType="Label">
                <Setter Property="FontSize" Value="14" />
                <Setter Property="TextColor" Value="{StaticResource TextSecondaryColor}" />
            </Style>

            <!-- Navigation Styles -->
            <Style TargetType="NavigationPage">
                <Setter Property="BarBackgroundColor" Value="{StaticResource SurfaceColor}" />
                <Setter Property="BarTextColor" Value="{StaticResource TextPrimaryColor}" />
                <Setter Property="BackgroundColor" Value="{StaticResource BackgroundColor}" />
            </Style>

            <!-- TabbedPage Styles -->
            <Style TargetType="TabbedPage">
                <Setter Property="BarBackgroundColor" Value="{StaticResource SurfaceColor}" />
                <Setter Property="BarTextColor" Value="{StaticResource TextPrimaryColor}" />
                <Setter Property="SelectedTabColor" Value="{StaticResource PrimaryColor}" />
                <Setter Property="UnselectedTabColor" Value="{StaticResource TextSecondaryColor}" />
                <Setter Property="BackgroundColor" Value="{StaticResource BackgroundColor}" />
            </Style>

            <!-- Enhanced TabbedPage Style -->
            <Style x:Key="CleanTabbedPageStyle" TargetType="TabbedPage">
                <Setter Property="BarBackgroundColor" Value="{StaticResource SurfaceColor}" />
                <Setter Property="BarTextColor" Value="{StaticResource TextPrimaryColor}" />
                <Setter Property="SelectedTabColor" Value="{StaticResource PrimaryColor}" />
                <Setter Property="UnselectedTabColor" Value="{StaticResource TextSecondaryColor}" />
                <Setter Property="BackgroundColor" Value="{StaticResource BackgroundColor}" />
            </Style>

            <!-- ContentPage Styles -->
            <Style TargetType="ContentPage">
                <Setter Property="BackgroundColor" Value="{StaticResource BackgroundColor}" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>

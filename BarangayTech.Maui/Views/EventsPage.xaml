                               FontSize="14" 
                               TextColor="#424242"
                               Margin="0,10,0,0"/>
                        
                        <StackLayout Orientation="Horizontal" Margin="0,10,0,0">
                            <Frame BackgroundColor="#E8F5E8" 
                                   Padding="8,4" 
                                   CornerRadius="12"
                                   HasShadow="False">
                                <Label Text="Community Service" 
                                       FontSize="10" 
                                       TextColor="#2E7D32"/>
                            </Frame>
                            <Frame BackgroundColor="#FFF3E0" 
                                   Padding="8,4" 
                                   CornerRadius="12"
                                   HasShadow="False">
                                <Label Text="Volunteer" 
                                       FontSize="10" 
                                       TextColor="#FF8F00"/>
                            </Frame>
                        </StackLayout>
                        
                        <Button Text="Learn More" 
                                BackgroundColor="#2E7D32" 
                                TextColor="White" 
                                CornerRadius="20"
                                Margin="0,10,0,0"
                                Clicked="OnEventDetailsClicked"/>
                    </StackLayout>
                </Frame>

                <!-- Sample Event 2 -->
                <Frame BackgroundColor="White" 
                       Padding="15" 
                       CornerRadius="10"
                       HasShadow="True"
                       Margin="0,0,0,15">
                    <StackLayout>
                        <Grid ColumnDefinitions="Auto,*,Auto">
                            <Frame Grid.Column="0" 
                                   BackgroundColor="#1976D2" 
                                   Padding="10" 
                                   CornerRadius="25"
                                   WidthRequest="50"
                                   HeightRequest="50">
                                <Label Text="20" 
                                       FontSize="16" 
                                       FontAttributes="Bold" 
                                       TextColor="White" 
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"/>
                            </Frame>
                            
                            <StackLayout Grid.Column="1" Margin="15,0,0,0">
                                <Label Text="Health and Wellness Seminar" 
                                       FontSize="16" 

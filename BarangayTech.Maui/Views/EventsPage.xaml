                        <Label Text="Celebrate Christmas with the community! Enjoy food, games, performances, and gift-giving for children. Bring your family and friends!" 
                               FontSize="14" 
                               TextColor="#424242"
                               Margin="0,10,0,0"/>
                        
                        <StackLayout Orientation="Horizontal" Margin="0,10,0,0">
                            <Frame BackgroundColor="#FFEBEE" 
                                   Padding="8,4" 
                                   CornerRadius="12"
                                   HasShadow="False">

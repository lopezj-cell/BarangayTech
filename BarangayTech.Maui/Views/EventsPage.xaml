                       Margin="0,0,0,15">
                    <StackLayout>
                        <Grid ColumnDefinitions="Auto,*,Auto">
                            <Frame Grid.Column="0" 
                                   BackgroundColor="#FF5722" 
                                   Padding="10" 
                                   CornerRadius="25"
                                   WidthRequest="50"
                                   HeightRequest="50">
                                <Label Text="25" 
                                       FontSize="16" 
                                       FontAttributes="Bold" 
                                       TextColor="White" 
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"/>
                            </Frame>
                            
                            <StackLayout Grid.Column="1" Margin="15,0,0,0">
                                <Label Text="Christmas Festival" 
                                       FontSize="16" 

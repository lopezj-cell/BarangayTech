                               TextColor="#424242"
                               Margin="0,10,0,0"/>
                        
                        <StackLayout Orientation="Horizontal" Margin="0,10,0,0">
                            <Frame BackgroundColor="#E3F2FD" 
                                   Padding="8,4" 
                                   CornerRadius="12"
                                   HasShadow="False">
                                <Label Text="Health" 
                                       FontSize="10" 
                                       TextColor="#1976D2"/>
                            </Frame>
                            <Frame BackgroundColor="#F3E5F5" 
                                   Padding="8,4" 
                                   CornerRadius="12"
                                   HasShadow="False">
                                <Label Text="Education" 
                                       FontSize="10" 
                                       TextColor="#7B1FA2"/>
                            </Frame>
                        </StackLayout>
                        
                        <Button Text="Register Now" 
                                BackgroundColor="#1976D2" 
                                TextColor="White" 
                                CornerRadius="20"
                                Margin="0,10,0,0"
                                Clicked="OnEventRegisterClicked"/>
                    </StackLayout>
                </Frame>

                <!-- Sample Event 3 -->
                <Frame BackgroundColor="White" 
                       Padding="15" 
                       CornerRadius="10"

<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BarangayTech.Views.EventsPage"
             Title="Events">
    
    <Grid RowDefinitions="Auto,*">
        
        <!-- Header Section -->
        <Frame Grid.Row="0" 
               BackgroundColor="{StaticResource PrimaryColor}" 
               Padding="20,25,20,20" 
               CornerRadius="0"
               HasShadow="True"
               Margin="0">
            <StackLayout>
                <Label Text="Community Events" 
                       FontSize="20" 
                       FontAttributes="Bold" 
                       TextColor="White" 
                       HorizontalOptions="Center"/>
                <Label Text="Stay updated with upcoming barangay activities" 
                       FontSize="13" 
                       TextColor="{StaticResource PrimaryLightColor}" 
                       HorizontalOptions="Center"/>
            </StackLayout>
        </Frame>

        <!-- Events List -->
        <ScrollView Grid.Row="1" Padding="15">
            <StackLayout x:Name="EventsContainer">
                
                <!-- Sample Event 1 -->
                <Frame BackgroundColor="White" 
                       Padding="15" 
                       CornerRadius="10"
                       HasShadow="True"
                       Margin="0,0,0,15">
                    <StackLayout>
                        <Grid ColumnDefinitions="Auto,*,Auto">
                            <Frame Grid.Column="0" 
                                   BackgroundColor="#2E7D32" 
                                   Padding="10" 
                                   CornerRadius="25"
                                   WidthRequest="50"
                                   HeightRequest="50">
                                <Label Text="15" 
                                       FontSize="16" 
                                       FontAttributes="Bold" 
                                       TextColor="White" 
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"/>
                            </Frame>
                            
                            <StackLayout Grid.Column="1" Margin="15,0,0,0">
                                <Label Text="Community Clean-up Drive" 
                                       FontSize="16" 
                                       FontAttributes="Bold" 
                                       TextColor="#2E7D32"/>
                                <Label Text="ðŸ“… December 15, 2024 â€¢ 7:00 AM" 
                                       FontSize="12" 
                                       TextColor="#666"/>
                                <Label Text="ðŸ“ Barangay Plaza" 

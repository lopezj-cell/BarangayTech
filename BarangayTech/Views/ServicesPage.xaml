<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BarangayTech.Views.ServicesPage"
             Title="Services">
    
    <Grid RowDefinitions="Auto,*">
        
        <!-- Header Section -->
        <Frame Grid.Row="0" 
               BackgroundColor="{StaticResource SecondaryColor}" 
               Padding="20,25,20,20" 
               CornerRadius="0"
               HasShadow="True"
               Margin="0">
            <StackLayout>
                <Label Text="Barangay Services" 
                       FontSize="20" 
                       FontAttributes="Bold" 
                       TextColor="White" 
                       HorizontalOptions="Center"/>
                <Label Text="Access government services and information" 
                       FontSize="13" 
                       TextColor="#BBDEFB" 
                       HorizontalOptions="Center"/>
            </StackLayout>
        </Frame>

        <!-- Services Grid -->
        <ScrollView Grid.Row="1" Padding="15">
            <StackLayout>
                
                <!-- Search Bar -->
                <SearchBar x:Name="ServiceSearchBar" 
                          Placeholder="Search services..." 
                          BackgroundColor="White"
                          Margin="0,0,0,20"/>
                
                <!-- Services Grid -->
                <Grid RowDefinitions="Auto,Auto,Auto,Auto" ColumnDefinitions="*,*">
                    
                    <!-- Certificate Services -->
                    <Frame Grid.Row="0" Grid.Column="0" 
                           BackgroundColor="White" 
                           Padding="15" 
                           Margin="5"
                           CornerRadius="15"
                           HasShadow="True">
                        <StackLayout>
                            <Label Text="📄" FontSize="40" HorizontalOptions="Center"/>
                            <Label Text="Certificates" 
                                   FontSize="14" 
                                   FontAttributes="Bold" 
                                   TextColor="#1976D2" 
                                   HorizontalOptions="Center"/>
                            <Label Text="Birth, Death, Marriage certificates" 
                                   FontSize="10" 
                                   TextColor="Gray" 
                                   HorizontalOptions="Center"
                                   HorizontalTextAlignment="Center"/>
                            <Button Text="Apply" 
                                    BackgroundColor="#1976D2" 
                                    TextColor="White" 
                                    CornerRadius="15"
                                    FontSize="12"
                                    Margin="0,10,0,0"
                                    Clicked="OnCertificatesClicked"/>
                        </StackLayout>
                    </Frame>
                    
                    <!-- Business Permit -->
                    <Frame Grid.Row="0" Grid.Column="1" 
                           BackgroundColor="White" 
                           Padding="15" 
                           Margin="5"
                           CornerRadius="15"
                           HasShadow="True">
                        <StackLayout>
                            <Label Text="🏪" FontSize="40" HorizontalOptions="Center"/>
                            <Label Text="Business Permit" 
                                   FontSize="14" 
                                   FontAttributes="Bold" 
                                   TextColor="#4CAF50" 
                                   HorizontalOptions="Center"/>
                            <Label Text="New business registration" 
                                   FontSize="10" 
                                   TextColor="Gray" 
                                   HorizontalOptions="Center"
                                   HorizontalTextAlignment="Center"/>
                            <Button Text="Apply" 
                                    BackgroundColor="#4CAF50" 
                                    TextColor="White" 
                                    CornerRadius="15"
                                    FontSize="12"
                                    Margin="0,10,0,0"
                                    Clicked="OnBusinessPermitClicked"/>
                        </StackLayout>
                    </Frame>
                    
                    <!-- Health Services -->
                    <Frame Grid.Row="1" Grid.Column="0" 
                           BackgroundColor="White" 
                           Padding="15" 
                           Margin="5"
                           CornerRadius="15"
                           HasShadow="True">
                        <StackLayout>
                            <Label Text="🏥" FontSize="40" HorizontalOptions="Center"/>
                            <Label Text="Health Services" 
                                   FontSize="14" 
                                   FontAttributes="Bold" 
                                   TextColor="#E91E63" 
                                   HorizontalOptions="Center"/>
                            <Label Text="Medical check-ups, vaccinations" 
                                   FontSize="10" 
                                   TextColor="Gray" 
                                   HorizontalOptions="Center"
                                   HorizontalTextAlignment="Center"/>
                            <Button Text="Book" 
                                    BackgroundColor="#E91E63" 
                                    TextColor="White" 
                                    CornerRadius="15"
                                    FontSize="12"
                                    Margin="0,10,0,0"
                                    Clicked="OnHealthServicesClicked"/>
                        </StackLayout>
                    </Frame>
                    
                    <!-- Social Services -->
                    <Frame Grid.Row="1" Grid.Column="1" 
                           BackgroundColor="White" 
                           Padding="15" 
                           Margin="5"
                           CornerRadius="15"
                           HasShadow="True">
                        <StackLayout>
                            <Label Text="🤝" FontSize="40" HorizontalOptions="Center"/>
                            <Label Text="Social Services" 
                                   FontSize="14" 
                                   FontAttributes="Bold" 
                                   TextColor="#FF9800" 
                                   HorizontalOptions="Center"/>
                            <Label Text="Senior citizen, PWD assistance" 
                                   FontSize="10" 
                                   TextColor="Gray" 
                                   HorizontalOptions="Center"
                                   HorizontalTextAlignment="Center"/>
                            <Button Text="Apply" 
                                    BackgroundColor="#FF9800" 
                                    TextColor="White" 
                                    CornerRadius="15"
                                    FontSize="12"
                                    Margin="0,10,0,0"
                                    Clicked="OnSocialServicesClicked"/>
                        </StackLayout>
                    </Frame>
                    
                    <!-- Legal Services -->
                    <Frame Grid.Row="2" Grid.Column="0" 
                           BackgroundColor="White" 
                           Padding="15" 
                           Margin="5"
                           CornerRadius="15"
                           HasShadow="True">
                        <StackLayout>
                            <Label Text="⚖️" FontSize="40" HorizontalOptions="Center"/>
                            <Label Text="Legal Services" 
                                   FontSize="14" 
                                   FontAttributes="Bold" 
                                   TextColor="#9C27B0" 
                                   HorizontalOptions="Center"/>
                            <Label Text="Legal advice, mediation" 
                                   FontSize="10" 
                                   TextColor="Gray" 
                                   HorizontalOptions="Center"
                                   HorizontalTextAlignment="Center"/>
                            <Button Text="Consult" 
                                    BackgroundColor="#9C27B0" 
                                    TextColor="White" 
                                    CornerRadius="15"
                                    FontSize="12"
                                    Margin="0,10,0,0"
                                    Clicked="OnLegalServicesClicked"/>
                        </StackLayout>
                    </Frame>
                    
                    <!-- Emergency Services -->
                    <Frame Grid.Row="2" Grid.Column="1" 
                           BackgroundColor="White" 
                           Padding="15" 
                           Margin="5"
                           CornerRadius="15"
                           HasShadow="True">
                        <StackLayout>
                            <Label Text="🚨" FontSize="40" HorizontalOptions="Center"/>
                            <Label Text="Emergency" 
                                   FontSize="14" 
                                   FontAttributes="Bold" 
                                   TextColor="#F44336" 
                                   HorizontalOptions="Center"/>
                            <Label Text="Emergency hotlines, rescue" 
                                   FontSize="10" 
                                   TextColor="Gray" 
                                   HorizontalOptions="Center"
                                   HorizontalTextAlignment="Center"/>
                            <Button Text="Call" 
                                    BackgroundColor="#F44336" 
                                    TextColor="White" 
                                    CornerRadius="15"
                                    FontSize="12"
                                    Margin="0,10,0,0"
                                    Clicked="OnEmergencyServicesClicked"/>
                        </StackLayout>
                    </Frame>
                    
                    <!-- Waste Management -->
                    <Frame Grid.Row="3" Grid.Column="0" 
                           BackgroundColor="White" 
                           Padding="15" 
                           Margin="5"
                           CornerRadius="15"
                           HasShadow="True">
                        <StackLayout>
                            <Label Text="♻️" FontSize="40" HorizontalOptions="Center"/>
                            <Label Text="Waste Management" 
                                   FontSize="14" 
                                   FontAttributes="Bold" 
                                   TextColor="#607D8B" 
                                   HorizontalOptions="Center"/>
                            <Label Text="Garbage collection, recycling" 
                                   FontSize="10" 
                                   TextColor="Gray" 
                                   HorizontalOptions="Center"
                                   HorizontalTextAlignment="Center"/>
                            <Button Text="Schedule" 
                                    BackgroundColor="#607D8B" 
                                    TextColor="White" 
                                    CornerRadius="15"
                                    FontSize="12"
                                    Margin="0,10,0,0"
                                    Clicked="OnWasteManagementClicked"/>
                        </StackLayout>
                    </Frame>
                    
                    <!-- Public Safety -->
                    <Frame Grid.Row="3" Grid.Column="1" 
                           BackgroundColor="White" 
                           Padding="15" 
                           Margin="5"
                           CornerRadius="15"
                           HasShadow="True">
                        <StackLayout>
                            <Label Text="🛡️" FontSize="40" HorizontalOptions="Center"/>
                            <Label Text="Public Safety" 
                                   FontSize="14" 
                                   FontAttributes="Bold" 
                                   TextColor="#795548" 
                                   HorizontalOptions="Center"/>
                            <Label Text="Security, peace and order" 
                                   FontSize="10" 
                                   TextColor="Gray" 
                                   HorizontalOptions="Center"
                                   HorizontalTextAlignment="Center"/>
                            <Button Text="Report" 
                                    BackgroundColor="#795548" 
                                    TextColor="White" 
                                    CornerRadius="15"
                                    FontSize="12"
                                    Margin="0,10,0,0"
                                    Clicked="OnPublicSafetyClicked"/>
                        </StackLayout>
                    </Frame>
                </Grid>
                
                <!-- Service Hours Information -->
                <Frame BackgroundColor="White" 
                       Padding="20" 
                       CornerRadius="15"
                       HasShadow="True"
                       Margin="0,20,0,0">
                    <StackLayout>
                        <Label Text="📍 Service Hours &amp; Contact" 
                               FontSize="16" 
                               FontAttributes="Bold" 
                               TextColor="#1976D2" 
                               HorizontalOptions="Center"/>
                        
                        <Grid RowDefinitions="Auto,Auto,Auto,Auto" ColumnDefinitions="Auto,*" Margin="0,15,0,0">
                            <Label Grid.Row="0" Grid.Column="0" Text="🕐" FontSize="16"/>
                            <Label Grid.Row="0" Grid.Column="1" Text="Monday - Friday: 8:00 AM - 5:00 PM" FontSize="14" Margin="10,0,0,0"/>
                            
                            <Label Grid.Row="1" Grid.Column="0" Text="📞" FontSize="16"/>
                            <Label Grid.Row="1" Grid.Column="1" Text="(02) 123-4567" FontSize="14" Margin="10,0,0,0"/>
                            
                            <Label Grid.Row="2" Grid.Column="0" Text="📧" FontSize="16"/>
                            <Label Grid.Row="2" Grid.Column="1" Text="services@barangaytech.gov.ph" FontSize="14" Margin="10,0,0,0"/>
                            
                            <Label Grid.Row="3" Grid.Column="0" Text="📍" FontSize="16"/>
                            <Label Grid.Row="3" Grid.Column="1" Text="Barangay Hall, Main Street" FontSize="14" Margin="10,0,0,0"/>
                        </Grid>
                    </StackLayout>
                </Frame>
                
            </StackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
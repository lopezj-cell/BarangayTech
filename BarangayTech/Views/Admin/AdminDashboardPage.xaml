<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BarangayTech.Views.Admin.AdminDashboardPage"
             Title="Admin Dashboard">
    
    <ScrollView>
        <StackLayout Padding="0">
            
            <!-- Header Section -->
            <Frame BackgroundColor="{StaticResource PrimaryColor}" 
                   Padding="20,30,20,20" 
                   CornerRadius="0"
                   HasShadow="True">
                <StackLayout>
                    <Label x:Name="WelcomeLabel"
                           Text="Welcome, Administrator" 
                           FontSize="22" 
                           FontAttributes="Bold" 
                           TextColor="White" 
                           HorizontalOptions="Center"/>
                    <Label Text="Admin Control Panel" 
                           FontSize="13" 
                           TextColor="{StaticResource PrimaryLightColor}" 
                           HorizontalOptions="Center"/>
                    <Label x:Name="DateTimeLabel"
                           FontSize="11" 
                           TextColor="White" 
                           HorizontalOptions="Center"
                           Margin="0,8,0,0"/>
                </StackLayout>
            </Frame>

            <!-- Admin Stats Section -->
            <StackLayout Padding="15,20">
                <Label Text="System Overview" 
                       FontSize="18" 
                       FontAttributes="Bold" 
                       TextColor="{StaticResource PrimaryColor}" 
                       Margin="0,0,0,15"/>
                
                <Grid RowDefinitions="Auto,Auto,Auto" ColumnDefinitions="*,*">
                    
                    <!-- Total Users -->
                    <Frame Grid.Row="0" Grid.Column="0" 
                           BackgroundColor="White" 
                           Padding="15" 
                           Margin="5"
                           CornerRadius="10"
                           HasShadow="True">
                        <StackLayout>

<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BarangayTech.Views.Admin.ManageUsersPage"
             Title="Manage Users">
    
    <StackLayout Padding="20">
        <Label Text="User Management" 
               FontSize="24" 
               FontAttributes="Bold" 
               TextColor="#7B1FA2" 
               HorizontalOptions="Center"
               Margin="0,20,0,30"/>
        
        <Button Text="Add New User" 
                BackgroundColor="#7B1FA2" 
                TextColor="White" 
                CornerRadius="20"
                Margin="0,10"
                Clicked="OnAddUserClicked"/>
        
        <Button Text="View All Users" 
                BackgroundColor="{StaticResource SecondaryColor}" 
                TextColor="White" 
                CornerRadius="20"
                Margin="0,10"
                Clicked="OnViewUsersClicked"/>
        
        <Button Text="User Permissions" 
                BackgroundColor="{StaticResource AccentColor}" 
                TextColor="White" 
                CornerRadius="20"
                Margin="0,10"
                Clicked="OnUserPermissionsClicked"/>
        
        <Label Text="Admin Feature: Manage user accounts, roles, and permissions." 
               FontSize="14" 
               TextColor="{StaticResource TextSecondaryColor}" 
               HorizontalTextAlignment="Center"
               Margin="0,30,0,0"/>
    </StackLayout>
</ContentPage>